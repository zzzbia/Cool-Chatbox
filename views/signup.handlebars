 <div class="h-[80vh] mx-auto container flex flex-row mt-10">
        <div class=" w-6/12 mx-auto inline-block p-6 rounded-lg shadow-lg bg-white max-w-sm content-center">
           <form id="signupForm">
                <h1 class="text-lg font-bold text-center">Signup</h1>
                <div class="flex flex-col my-7">
                    <label class="block text-sm font-bold mb-2" for="email">Email</label>
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="email" type="text" placeholder=" Enter your email">

                    <label class="block text-sm font-bold mb-2" for="username">Username</label>
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="username" type="text" placeholder=" Enter your desired username">

                    <label class="block text-sm font-bold mb-2 my-2" for="password">Password</label>
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                        id="password" type="password" placeholder="Enter your password">

                    <button type="submit" class=" text-center my-2 px-5 py-1 h-full bg-cyan-500 rounded-md text-white
                        hover:bg-cyan-600"> Signup</button>
            </form>
                <a href="/login" class=" text-center my-2 px-5 py-1 h-full   text-cyan-600
                        hover:opacity-80">Have an account? Login now</a>
        </div>
    </div>

<script>
        const form = document.getElementById('signupForm');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const email = document.getElementById('email').value;
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const data = {
                email,
                username,
                password
            };
            fetch('/api/users/', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
                .then(res => res.json())
                .then(data => {
                    if (data.error) {
                        alert(data.error);
                    } else {
                        alert(data.message);
                        window.location.href = '/login';
                    }
                })
                .catch(err => {
                    console.log(err);
                });
        });
    
</script>